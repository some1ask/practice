<% include ../layout/header.ejs%>
    <div class="wrapper">
        <div class="container">
        <% for(var i=0;i< posts.length;i++){ %>
            <div class="post__item">
                <div class="post__header">
                    <a href="/posts/<%= posts[i].url %>"><h3><%= posts[i].title %></h3></a>
                </div>
            <div class="post__body">
                <div class="post__descr">
                    <p><%= posts[i].body %></p>
                </div>
                <div class="post__author">
                    <h5>Автор: <a href="/users/<%= posts[i].owner.login %>"><%= posts[i].owner.login %></h5>
                </div>
            </div>
        </div>
        <% } %>
         
            <div class="pagination">
                <% if(current >2) { %> 
                    <a href="/archive/<%= Number(current)-1%>" class="new page__btn">&#8592;Туда</a>
                <%}%>
                <%if(current == 2) { %> 
                    <a href="/" class="new page__btn">На главную</a>
                <%}%>
                <% if(pages > 0 && current < pages) { %> 
                    <a href="/archive/<%= Number(current)+1%>" class="old page__btn">Туда&#8594;</a>
                <%}%>
            </div>
        </div>
        <% include ../layout/form.ejs %>
    </div>
<% include ../layout/footer.ejs %>
